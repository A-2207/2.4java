import java.util.List;
import java.util.Scanner;

class StudentView {
    private StudentController controller;
    private Scanner sc;
    
    public StudentView() {
        controller = new StudentController();
        sc = new Scanner(System.in);
    }
    
    public void showMenu() {
        while(true) {
